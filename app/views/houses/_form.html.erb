<%= form_with(model: house, local: true) do |form| %>
  <% if house.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(house.errors.count, "error") %> prohibited this house from being saved:</h2>

      <ul>
      <% house.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :物件名 %>
    <%= form.text_field :house_name %>
  </div>

  <div class="field">
    <%= form.label :賃料 %>
    <%= form.text_field :rent %>
  </div>

  <div class="field">
    <%= form.label :住所 %>
    <%= form.text_field :street_address %>
  </div>

  <div class="field">
    <%= form.label :築年数 %>
    <%= form.text_field :house_age %>
  </div>

  <div class="field">
    <%= form.label :備考 %>
    <%= form.text_area :remarks %>
  </div>
  <% n = 0 %>
  <%= form.fields_for :stations do |f| %>
    <%= "最寄り駅#{n += 1}" %>
    <div class="field">
      <%= f.label :route_name, "路線名" %>
      <%= f.number_field :route_name %>
    </div>
    <div class="field">
      <%= f.label :station_name, "駅名" %>
      <%= f.text_field :station_name %>
    </div>
    <div class="field">
      <%= f.label :walktime, "徒歩時間" %>
      <%= f.number_field :walktime %>
    </div>
  <% end %>
  <div class="actions">
    <%= form.submit :登録する %>
  </div>
<% end %>
